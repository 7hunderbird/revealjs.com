<header class="header {% if id == "home" %}sticky{% else %}fixed{% endif %} flex h-16 items-center top-0 w-full z-30 bg-gray-100 py-2 border-b border-gray-300">
  <div class="w-full relative max-w-screen-xl mx-auto px-6 flex flex-row items-center justify-between">
    <div class="header-left block text-black mr-6">
      <a class="header-logo block text-black mr-6" href="/" title="reveal.js home">
        <img src="/images/logo/reveal-black-text.svg" alt="reveal.js logo" style="height: 48px">
      </a>
      <a class="header-cta py-3 px-2 -mx-2 text-gray-800 hover:text-gray-900 rounded font-semibold" href="/installation">Get Started</a>
    </div>

    <nav class="header-nav hidden md:flex">

      <ul class="menu flex flex-col md:flex-row items-center list-reset text-base">

        <li class="search relative mr-2">
          <input class="search-input w-full inline-block py-1 px-4 bg-gray-300 border-2 border-gray-300 outline-none rounded-full placeholder-gray-600 text-gray-800 hover:text-gray-900 focus:border-yellow-400 focus:bg-white" placeholder="Search..." />
          <div class="search-results absolute top-100 right-0 bg-white p-2 mt-2 rounded shadow-lg text-sm" data-state="no-term"></div>
        </li>
        <li>
          <a class="inline-block py-3 px-5 text-gray-800 hover:text-gray-900 rounded font-semibold align-middle" href="https://twitter.com/revealjs" target="_blank">
            {% include "images/twitter.svg" %}
          </a>
        </li>
        <li>
          <a class="inline-block py-3 px-5 text-gray-800 hover:text-gray-900 rounded font-semibold align-middle" href="https://github.com/hakimel/reveal.js" target="_blank">
            {% include "images/github.svg" %}
          </a>
        </li>

      </ul>

    </nav>

    <nav class="header-nav md:hidden flex">

      <ul class="menu flex flex-row items-center list-reset text-sm">

        <li>
          <a class="inline-block p-2 text-gray-800 hover:text-gray-900 rounded font-semibold align-middle" href="https://twitter.com/revealjs" target="_blank">
            {% include "images/twitter.svg" %}
          </a>
        </li>
        <li>
          <a class="inline-block p-2 mr-2 text-gray-800 hover:text-gray-900 rounded font-semibold align-middle" href="https://github.com/hakimel/reveal.js" target="_blank">
            {% include "images/github.svg" %}
          </a>
        </li>
        <li>
          <button class="menu-toggle inline-block py-2 px-4 text-gray-800 hover:text-gray-900 border-2 border-gray-600 rounded font-semibold"></button>
        </li>

      </ul>

    </nav>
  </div>
</header>
